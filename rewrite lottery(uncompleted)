from __future__ import unicode_literals
import random

def Computer_contrast():
    Ans = Answer()
    user_Answer = Answer()
    count = 0
    for contrast in user_Answer:
        if contrast in Ans:
            count += 1

    return [Ans,user_Answer,count]

def Answer():
    Answer = random.sample(range(1, 50), 7)
    return Answer

def user_input():
    
    user_Answer = input('Please input seven numbers(用空白隔開數字): ').split()
    count = 0
    numbers = []
    try:  
        if len(user_Answer) != 7 :
            print('input len mistake')
            exit()
        else:    
            for number in user_Answer:
                if 0 < int(number) < 50 :
                    number = int(number)
                    if number not in numbers:
                        numbers.append(number)

                    else:
                        print('Repeat input')
                        exit()
                else:
                    print('too large or small')
                    exit()
        Ans = Answer()
        for contrast in numbers:
            contrast = int(contrast)
            if contrast in Ans:
                count += 1    

        return [Ans,numbers,count]
    
    except ValueError:
        return 'input mistake'
    except UnboundLocalError:
        return 'input mistake'

def print_result():
    
    if Question == 'C' or Question == 'c':
        Computer_contrast()
        Ans = str(sorted(Computer_contrast()[0]))
        user_numbers = str(sorted(Computer_contrast()[1]))
        counts = str(sorted([Computer_contrast()[2]]))
    else:
        # user_input()
        Ans = str(sorted(user_input()[0]))
        user_numbers = str(sorted(user_input()[1]))
        counts = str(sorted([user_input()[2]]))

    return ('獎號' + Ans + '\n選號' + user_numbers +'\n共猜中' + counts + '個')

Question = input('Computer(C) or youself(Y) select or Exit(E)?')
    
if Question == 'C' or Question == 'c':
    print(print_result())
elif Question == 'Y' or Question == 'y':
    print(print_result())
elif Question == 'E' or Question =='e':
    exit()
else:
    print('mistake input')

